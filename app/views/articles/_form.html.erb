<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |message| %>
      <p> <%= message %></p>
    <% end %>
  <% end %> 

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :author %> <br>
    <%= collection_select(:article, :author_id, Author.all, :id, :last_name, prompt: true) %>
  </p>

  <p>
    <%= f.label :tag, "Tags" %> <br>
    <%= collection_check_boxes(:article, :tag_ids, Tag.all, :id, :name, prompt: true) %>
  </p>
   
  <p>
    <%= f.submit %>
  </p>

<% end %>